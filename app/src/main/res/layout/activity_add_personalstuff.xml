<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.group1.swepproject.user.nochange.AddPersonalstuffActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#02cfd6">

            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/back_button"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:background="#02cfd6"
                android:src="@drawable/back" />

        </RelativeLayout>


        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/header"
            android:background="#f0f8b8"
            android:hint="Name"
            android:inputType="text|textPersonName"
            android:paddingEnd="0dp"
            android:paddingStart="20dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/amount"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:hint="How much?"
            android:inputType="number|numberDecimal"
            android:background="#f0f8b8"
            android:layout_marginStart="10dp"
            android:paddingStart="20dp"
            android:layout_below="@+id/name"
            android:paddingEnd="0dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginTop="30dp"/>


        <LinearLayout
            android:id="@+id/dreamer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/amount"
            android:layout_marginTop="80dp"
            android:background="#c62c14"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/isDebt"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="55dp"
                android:text="To pay"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="italic" />

            <RadioButton
                android:id="@+id/isCredit"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:text="To Collect"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="italic" />
        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_save_black_24dp"
            android:id="@+id/save"
            android:layout_marginBottom="43dp"
            android:layout_marginEnd="29dp" />
    </RelativeLayout>
</FrameLayout>
